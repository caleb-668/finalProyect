<!-- =============== Navigation ================ -->
<div class="container">
    <div class="navigation">
        <ul>
            <li>
                <a href="#">
                    <span class="icon">
                        <ion-icon name="person"></ion-icon>
                    </span>
                    <span class="title">Admin Pedro</span>
                </a>
            </li>

            <li>
                <a href="#">
                    <span class="icon">
                        <ion-icon name="home-outline"></ion-icon>
                    </span>
                    <span class="title">Dashboard</span>
                </a>
            </li>

            <li>
                <a href="#">
                    <span class="icon">
                        <ion-icon name="people-outline"></ion-icon>
                    </span>
                    <span class="title">Users</span>
                </a>
            </li>

            <li>
                <a href="/users/peliculas">
                    <span class="icon">
                        <ion-icon name="film"></ion-icon>
                    </span>
                    <span class="title">Movies</span>
                </a>
            </li>

            <li>
                <a href="#">
                    <span class="icon">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                    </span>
                    <span class="title">Password</span>
                </a>
            </li>

            <li>
                <a href="/users/download">
                    <span class="icon">
                        <ion-icon name="document"></ion-icon>
                    </span>
                    <span class="title">Download Report</span>
                </a>
            </li>

            <li>
                <a href="/users/logout">
                    <span class="icon">
                        <ion-icon name="log-out-outline"></ion-icon>
                    </span>
                    <span class="title">Sign Out</span>
                </a>
            </li>

            
        </ul>
    </div>

    <!-- ========================= Main ==================== -->
    <div class="main">
        <div class="topbar">
            <div class="toggle">
                <ion-icon name="menu-outline"></ion-icon>
            </div>

            <div class="search">
                <label>
                    <input type="text" placeholder="Search here">
                    <ion-icon name="search-outline"></ion-icon>
                </label>
            </div>

            <div class="user">
                <img src="/image/customer01.jpg" alt="">
            </div>
        </div>

        <!-- ======================= Cards ================== -->
        <div class="cardBox">
            <div class="card">
                <div>
                    <div class="numbers">25</div>
                    <div class="cardName">Daily Views Users</div>
                    
                </div>

                <div class="iconBx">
                    <ion-icon name="eye-outline"></ion-icon>
                </div>
            </div>

            <div class="card">
                <div>
                    <div class="numbers"> <%= userCount %></div>
                    <div class="cardName">Users Register</div>
                </div>

                <div class="iconBx">
                    <ion-icon name="person"></ion-icon>
                </div>
            </div>

            <div class="card">
                <div>
                    <div class="numbers">28</div>
                    <div class="cardName">Movies</div>
                </div>

                <div class="iconBx">
                    <ion-icon name="film"></ion-icon>
                </div>
            </div>

            <div class="card">

                <div class="iconBx">
                    <ion-icon name="logo-tux"></ion-icon>
                </div>
                <div class="iconBx">
                    <ion-icon name="logo-nodejs"></ion-icon>
                </div>
            </div>
        </div>

        <!-- ================ Order Details List ================= -->
        <div class="details">
            <div class="recentOrders">
                <div class="cardHeader">
                    <h2>Recent Users</h2>
                    <a href="#" class="btn">View All</a>
                </div>

                 <table>
                    <thead>
                        <tr>
                            <td>Email</td>
                            <td>Name</td>
                            <td>ID</td>
                            <td>Delete User</td>
                        </tr>
                    </thead>

                    <tbody>
                        <% users.forEach(function(user) { %>
                            <tr>
                                <td><%= user.email %></td>
                                <td><%= user.name %></td>
                                <td><%= user.id %></td>
                                <td><a href="/users/delete/<%= user.id %>"><ion-icon name="trash"></ion-icon></a></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- ================= New Customers ================ -->
            <div class="recentCustomers">
                <div class="cardHeader">
                    <h2>Recent Users</h2>
                </div>

                <table>
                    <% users.forEach(function(user) { %>
                    <tr>
                        <td width="60px">
                            <div class="iconBx"><ion-icon name="person"></ion-icon></div>
                        </td>
                        <td>
                            <h4><%= user.name %> <br> <span><%= user.email %></span></h4>
                        </td>
                    </tr>
                    <% }) %>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- =========== Scripts =========  -->
<script src="/admin.js"></script>

<!-- ====== ionicons ======= -->
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>